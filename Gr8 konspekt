            var x = "abc"; //var on ebam√§√§rase andmet√º√ºbiga kohalik muutuja
            var y = 123;   //ta v√µib omada endas teisi andmet√º√ºpe
            const int z = 9; // konstant-t√º√ºpi muutujaid ei saa muuta, nende sisu on read-only
            //void - on andmet√º√ºp, mida muutuja tekitamisel kasutada ei saa. Kasutatakse ainult meetodite signatuurides v√§ljendamaks et
            //meetod ei tagasta midagi.

            /* V√µimalikud komposiitandmet√º√ºbid */
            // 1. massiiv:
            // [] - > Massiiv on komposiitandmet√º√ºp, mille sees saab olla mitmeid samat t√º√ºpi lihtandmeid. Massiivi t√§histatakse kantsulgudega.
            //        Massive saab olla √ºksk√µik millist lihtandmet√º√ºpi massiive.
            //        Massiivi tekitamisel tuleb √§ra √∂elda kui pikk v√µi kui suur see massiiv on.
            //        Massiiv ei pea olema koostatud ainult lihtandmet√º√ºpidest, vaid massiive saab olla ka tehtud teistest komposiitandmet√º√ºpidest
            //        Sealhulgas massiiv ise.
            // Esimene tekitusviis:
            int[] arvuMassiiv = new int[3]; // andmet√º√ºp int v√§ljendab et tegu on t√§isarvut√º√ºpi andmega ja kantsulud v√§ljendavad et √ºhtlasi on
                                            // tegu ka massiiviga. muutuja nimeks on "arvuMassiiv" ja v√µrdusm√§rgi abil on omistatud muutujasse
                                            // uus t√ºhi massiiv kasutades kaitstud s√µna "new", millele j√§rgneb selle massiivi andmet√º√ºbi ja
                                            // pikkuse s√§testus "int[3]". See t√§ghendab et siin massiivis on 3 elementi, mis on t√§isarvud.
                                            // Teine tekitusviis:
            int[] arvuMassiiv2 = [1, 2, 3];   // teine massiivi tekitusviis kus j√§rjendi pikkuse s√§testamise asemel, pannakse elemendid kohe
                                              // j√§rjendit omava muutuja sisse, j√§rjendi pikkust s√§testama ei pea, kuna pikkuse tuletab kompilaator
                                              // sinna sisse pandud elementide koguse j√§rgi.

            // -- massiivi sisemised meetodid:
            int hasThisMany = arvuMassiiv.Length; // massiivi meetod "Length" mille me saame kasutusele v√µtta punkti abil, loendab kokku
                                                  // mitu elementi, adresseeritav massiiv omab, omistatakse ainult j√§rjendi pikkus, mitte
                                                  // j√§rjendi sees olevaid elemente.
                                                  //2. Loend:
                                                  // List<T> -> Loend on komposiitandmet√º√ºp, mille sees saab olla mitmeid samat t√º√ºpi liht ja komposiitandmeid. Loend-t√º√ºpi andmeid t√§histatakse
                                                  //            t√§iendava andmet√º√ºbikirjeldusega "List" mille j√§rel noolsulgudesse <> asetatakse mis t√º√ºpi andmed seal loendis on.
                                                  //            Loendi tekitamisel, erinevalt massiivist, ei pea √ºtlema kui pikk loend on. Loendisse saab d√ºnaamiliselt elemente juurde lisada,
                                                  //            ehk tema pikkus ei ole fikseeritud. Sarnaselt massiiviga saab temas hoida ka teisi loendeid.
                                                  // Esimene tekitusviis:
            List<int> arvuNimekiri = new List<int>(); //Andmet√º√ºbi kirjeldus "List<>" n√§itab et tegu on loendiga. Listi noolsulgude <> vahel on loendis
                                                      //olevate andmete andmet√º√ºp. Antud juhul on andmet√º√ºbiks "int" mis t√§histab t√§isarve. Muutuja enda
                                                      //nimeks on "arvuNimekiri". Omistame sellesse muutujasse kaitstud s√µna "new" abil uue t√ºhja
                                                      //t√§isarvuloendi s√§testusega "List<int>()".
                                                      // Teine tekitusviis:
            List<int> arvuNimekiri2 = new List<int>() { 1, 2, 3 }; //Teine loendi tekitusviis. Andmet√º√ºbi kirjeldus "List<>" n√§itab et tegu on loendiga, Listi
                                                                   //noolsulgude vahel on loendis olevate elementide andmet√º√ºp. Antud juhul on andmet√º√ºbiks "int"
                                                                   //mis t√§histab t√§isarve. Muutuja enda nimeks on "arvuNimekiri2". Omistame selle muutujasse 
                                                                   //kaitstud s√µna "new" abil uue t√§isarvuloendi, aga seekord, peale s√§testust "List<int>()" saame
                                                                   //instantsieerimise hetkel talle kaasa anda ka esimesi elemente. Antud juhul on need elemendid
                                                                   //"1", "2" ja "3". Elemendid sisestatakse nimekirja loogeliste sulgude vahel. Enam ei ole tegu
                                                                   //t√ºhja nimekirjaga, vaid loendiga kus on kolm elementi juba sees.
                                                                   // kolmas tekitusviis:
            List<int> arvuNimekiri3 = new List<int>(3); //Kolmas loendi tekitusviis. Andmet√º√ºbi kirjeldus "List<>" n√§itab et tegu on loendiga, Listi noolsulgude
                                                        //vahel on loendis olevate elementide andmet√º√ºp. Antud juhul on andmet√º√ºbiks "int" mis t√§histab t√§isarve.
                                                        //Muutuja enda nimeks on "arvuNimekiri3". Omistame sellesse muutujasse kaitstud s√µna "new" abil uue
                                                        //t√§isarvuloendi, aga tavaliste sulgude vahele paneme arvu "3". Sarnaselt massiiviga √ºtleb see, et
                                                        //loend on 3 elemendi suurune. Loend ise ja tema elemendid on t√ºhjad, aga seal on 3 elementi. Arv "3"
                                                        //on parameeter mida Listi konstruktor pikkuse m√§√§ramiseks kasutab. Nimekiri s√§ilitab oma omaduse muuta
                                                        //pikkust elementide lisamise-eemaldamisega, aga vajadusel saab nii anda talle pikkuse.
            int aa = 9001;
            // -- Loendi sisemised meetodid:
            arvuNimekiri.Add(99); //Loendi meetod "Add()" lisab enne punkti olevale j√§rjendile uue elemendi, element mida lisatakse on Add meetodi sulgude
                                  //vahel. Elementi saab lisada otse (antud juhul t√§isarv "99")
            arvuNimekiri.Add(aa); //v√µi muutujana.
            int loendiPikkus = arvuNimekiri3.Count(); //Loendi meetod "Count()" loeb kokku mitu elementi j√§rjendis on, meetod tagastab t√§isarvu mis vastab
                                                      //elementide kogusele.
            bool KasSeeArvOn = arvuNimekiri3.Contains(3); //Loendi meetod "Contains()" otsib kogu j√§rjendi seest elementi, mis vastab sulgude vahel olevale
                                                          //parameetrile. Meetod tagastab kas "true" v√µi "false" - on leitud v√µi ei ole. Tegemist on
                                                          //p√µhim√µtteliselt foreach ts√ºkliga, mis otsib kindlat vastet, t√∂√∂tades l√§bi kogu loendi.
            arvuNimekiri3.Remove(4); //Loendi meetod "Remove()"eemaldab enne punkti olevast loendist, kindlal asukohal oleva elemendi. Sulgude vahel on parameetriks
                                     //eemaldatava elemendi asukohaj√§rjekorranumber.

            //p√µhilised matemaatilised tehted
            int liitmine = 1 + 1; //liitmine, kaks arvu liidetakse kokku
            int lahutamine = 1 - 1; //lahutamine, kus esimesest arvust lahutatakse maha teine
            double korrutamine = 1 * 2; //korrutamine, kus teine arv korrutatakse esimese arvu kordi.
            double jagamine = 1 / 2; //jagamine. esimene arv jagatakse teise arvuga.

            //Matemaatilised tehted moodulist "Math"
            double astendamine = Math.Pow(2, 2); //astendamine, esimene arv astendatakse teisega
            double juurimine = Math.Sqrt(2); //ruutjuur, parameetrina juuritav arv
            double newD = 4.0000001d;
            Math.Round(newD); //Moodulist "Math" kutsutakse esile punkti abil meetod "Round", sulgude vahel on esimese parameetrina 
                              //√ºmardatav arv, teise parameetrina komakohtade arv. Round √ºmardab sulgude vahel oleva arvv√§√§rtuse
                              //teises parameetris oleva komakohtaden


**–û–±—â–∏–µ —Ç–µ—Ä–º–∏–Ω—ã**

programm ‚Äî –ø—Ä–æ–≥—Ä–∞–º–º–∞
