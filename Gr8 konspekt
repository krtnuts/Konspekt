            int a = 1; // int ‚Äî —Ü–µ–ª–æ–µ —á–∏—Å–ª–æ
            decimal b = 2.1M; // decimal ‚Äî –¥–µ—Å—è—Ç–∏—á–Ω–æ–µ —á–∏—Å–ª–æ
            float c = 3.9f; // float ‚Äî 32-–±–∏—Ç–Ω–æ–µ —á–∏—Å–ª–æ —Å –ø–ª–∞–≤–∞—é—â–µ–π —Ç–æ—á–∫–æ–π
            double d = 5.6d; // double ‚Äî 64-–±–∏—Ç–Ω–æ–µ —á–∏—Å–ª–æ —Å –ø–ª–∞–≤–∞—é—â–µ–π —Ç–æ—á–∫–æ–π
            char c1 = 'a'; // –æ–¥–∏–Ω —Å–∏–º–≤–æ–ª
            string s = "tekst"; // —Å—Ç—Ä–æ–∫–∞
            var x = "abc"; // –Ω–µ—è–≤–Ω–æ —Ç–∏–ø–∏–∑–∏—Ä–æ–≤–∞–Ω–Ω–∞—è –ø–µ—Ä–µ–º–µ–Ω–Ω–∞—è
            var y = 123;
            const int z = 9; // –∫–æ–Ω—Å—Ç–∞–Ω—Ç–∞, –∑–Ω–∞—á–µ–Ω–∏–µ –Ω–µ–ª—å–∑—è –∏–∑–º–µ–Ω–∏—Ç—å

            /* –í–æ–∑–º–æ–∂–Ω—ã–µ —Å–æ—Å—Ç–∞–≤–Ω—ã–µ —Ç–∏–ø—ã –¥–∞–Ω–Ω—ã—Ö */

            // 1. –º–∞—Å—Å–∏–≤
            int[] arvuMassiiv = new int[3];

            int[] arvuMassiiv2 = [1, 2, 3];

            int hasThisMany = arvuMassiiv.Length;

            // 2. —Å–ø–∏—Å–æ–∫
            List<int> arvuNimekiri = new List<int>();

            List<int> arvuNimekiri2 = new List<int>() { 1, 2, 3 };

            List<int> arvuNimekiri3 = new List<int>(3);

            int aa = 9001;

            arvuNimekiri.Add(99);
            arvuNimekiri.Add(aa);

            int loendiPikkus = arvuNimekiri3.Count();

            bool KasSeeArvOn = arvuNimekiri3.Contains(3);

            arvuNimekiri3.Remove(4);

            // –æ—Å–Ω–æ–≤–Ω—ã–µ –º–∞—Ç–µ–º–∞—Ç–∏—á–µ—Å–∫–∏–µ –æ–ø–µ—Ä–∞—Ü–∏–∏
            int liitmine = 1 + 1;
            int lahutamine = 1 - 1;
            double korrutamine = 1 * 2;
            double jagamine = 1 / 2;

            // –º–∞—Ç–µ–º–∞—Ç–∏—á–µ—Å–∫–∏–µ –æ–ø–µ—Ä–∞—Ü–∏–∏ –∏–∑ –º–æ–¥—É–ª—è Math
            double astendamine = Math.Pow(2, 2);
            double juurimine = Math.Sqrt(2);
            double newD = 4.0000001d;

            Math.Round(newD);
        }
    }
}
