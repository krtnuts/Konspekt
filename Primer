using System;

class Program
{
    static void Main()
    {
        // ===== 1 Ğ¡Ğ•ĞšĞ¦Ğ˜Ğ¯ â€” if (Ğ¿Ñ€Ğ¾Ğ²ĞµÑ€ĞºĞ° Ğ¸Ğ¼ĞµĞ½Ğ¸) =====
        Console.WriteLine("Tere! Write your username:");

        string userName = Console.ReadLine();

        if (userName != "123")
        {
            Console.WriteLine("Bad name, go away ğŸ˜¡");
            return; // Ğ·Ğ°Ğ²ĞµÑ€ÑˆĞ°ĞµÑ‚ Ğ¿Ñ€Ğ¾Ğ³Ñ€Ğ°Ğ¼Ğ¼Ñƒ
        }

        Console.WriteLine("Tere " + userName);


        // ===== 2 Ğ¡Ğ•ĞšĞ¦Ğ˜Ğ¯ â€” if / else (Ğ²Ğ¾Ğ¿Ñ€Ğ¾Ñ Ğ´Ğ°/Ğ½ĞµÑ‚) =====
        Console.WriteLine("Kas sulle meeldivad mangud? (jah / ei)");
